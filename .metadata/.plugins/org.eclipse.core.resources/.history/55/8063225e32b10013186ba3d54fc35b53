package tacoguy56.ccgdx.button;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.graphics.Texture;
import com.badlogic.gdx.graphics.g2d.Sprite;

import tacoguy56.ccgdx.Size;
import tacoguy56.ccgdx.Thing;

public class Button extends Thing{
	private short currentSprite = 0;
	private Texture texture;
	private Sprite sprite;
	public Button(int x, int y) {
		super(x, y);
	}
	public void tick(){
		if(Gdx.input.getX() <= this.position.x + this.size.x && Gdx.input.getX() >= this.position.x){
			System.out.println("In X range");
		} else{
			System.out.println("Not in X range");
		}
	}
}
