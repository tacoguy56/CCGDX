package tacoguy56.ccgdx.button;

import java.util.ArrayList;
import java.util.List;

import com.badlogic.gdx.graphics.Texture;

public class ButtonHandler {
	public static List<Button> buttons = new ArrayList<Button>();

	public static void addButton(int x, int y, int sizeX, int sizeY, Texture idle, Texture hover, Texture click){
		buttons.add(new Button(x, y, idle, hover, click));
		buttons.get(buttons.size());
	}
}
